<h1 class="text-center">Login de usuarios</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Ingrese email...">
            </div>
            <br>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese contraseña..." autocomplete="off">
            </div>
            <br>
            <input type="submit" value="Login" class="btn btn-primary">
        </form>
    </div>
</div>
